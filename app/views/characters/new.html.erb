<% content_for :night_sky, true %>
<div class="prompt-container min-vh-100 d-flex align-items-center justify-content-center">
  <!-- Avatar Corner -->
  <%= render 'shared/avatar_corner' %>

  <div class="prompt-back-button">
    <%= link_to characters_path, class: "btn-back" do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="prompt-card">
    <div class="text-center mb-4">
      <h1 class="prompt-title mb-2">Create your own character</h1>
      <p class="prompt-subtitle">Describe the hero you want to play with</p>
    </div>

    <%= render 'shared/flashes' %>

    <%= simple_form_for @character, error_notification: false, html: { data: { loading_game: "true" } } do |f| %>
      <div class="form-inputs">
        <%= f.input :description,
                    label: false,
                    required: true,
                    as: :text,
                    input_html: {
                      rows: 4,
                      class: 'prompt-input',
                      placeholder: 'Write your character prompt here...',
                      value: params[:description] || @character&.description
                    } %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit,
                    "Generate character",
                    class: "btn btn-sunset btn-lg w-100" %>
      </div>
    <% end %>
  </div>
</div>
