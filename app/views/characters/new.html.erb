<div class="prompt-container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="prompt-card">
    <div class="text-center mb-4">
      <h1 class="prompt-title mb-2">Create your own character</h1>
      <p class="prompt-subtitle">Describe the hero you want to play with</p>
    </div>

    <%= simple_form_for @character do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :description,
                    label: false,
                    required: true,
                    as: :text,
                    input_html: {
                      rows: 4,
                      class: 'prompt-input',
                      placeholder: 'Write your character prompt here...'
                    } %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit,
                    "Generate character",
                    class: "btn btn-sunset btn-lg w-100" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  body {
    background-color: #000;
    color: #fff;
  }

  .prompt-container {
    padding: 2rem 1rem;
  }

  .prompt-card {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 24px;
    padding: 3rem 2.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    max-width: 700px;
    width: 100%;
  }

  .prompt-title {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .prompt-subtitle {
    font-size: 1.1rem;
    color: #999;
    margin-bottom: 0;
  }

  .prompt-input {
    background-color: #0a0a0a;
    border: 2px solid #333;
    border-radius: 20px;
    color: #fff;
    font-size: 1.1rem;
    padding: 1.25rem 1.5rem;
    width: 100%;
    resize: none;
    transition: all 0.3s ease;
  }

  .prompt-input::placeholder {
    color: #666;
  }

  .prompt-input:focus {
    background-color: #111;
    border-color: #FF6B6B;
    outline: none;
    box-shadow: 0 0 0 4px rgba(255, 107, 107, 0.15);
  }

  .btn-sunset {
    background-color: #FF6B6B;
    border: none;
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 1rem;
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .btn-sunset:hover {
    background-color: #FF5252;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(255, 107, 107, 0.3);
  }

  .btn-sunset:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .prompt-card {
      padding: 2rem 1.5rem;
    }

    .prompt-title {
      font-size: 1.5rem;
    }

    .prompt-subtitle {
      font-size: 1rem;
    }

    .prompt-input {
      font-size: 1rem;
      padding: 1rem 1.25rem;
    }
  }
</style>
