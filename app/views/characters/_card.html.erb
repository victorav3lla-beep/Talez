          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-lift character-card"
                 data-selection-target="card"
                 data-id="<%= character.id %>"
                 data-action="click->selection#select"
                 style="cursor: pointer;">
              <% if character.image_url.present? %>
                <%= link_to character_path(character) do %>
                <%= image_tag character.image_url, class: "card-img-top", alt: character.name, style: "height: 200px; object-fit: cover;" %>
               <% end %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                  <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                </div>
              <% end %>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= character.name %></h5>
                <% if character.description.present? %>
                  <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(character.description, length: 80) %></p>
                <% end %>
              </div>
            </div>
          </div>
