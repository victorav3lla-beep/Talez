<div class="container py-5" data-controller="selection">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold" style="color: #FF6B6B;">Choose your character</h1>
    <p class="lead text-muted">Select the hero for your story</p>
    <button class="btn btn-outline-secondary mt-3" id="randomize-btn" type="button">
      <i class="bi bi-shuffle me-2"></i>Randomize
    </button>
  </div>

  <%= form_with url: select_characters_path, method: :post, data: { turbo: false } do |f| %>
    <%= f.hidden_field :id, value: "", data: { selection_target: "input" } %>

    <div class="row g-4">
      <% if @default_characters.any? %>
        <% @default_characters.each do |character| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-lift character-card"
                 data-selection-target="card"
                 data-id="<%= character.id %>"
                 data-action="click->selection#select"
                 style="cursor: pointer;">
              <% if character.image_url.present? %>
                <%= image_tag character.image_url, class: "card-img-top", alt: character.name, style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                  <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                </div>
              <% end %>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= character.name %></h5>
                <% if character.description.present? %>
                  <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(character.description, length: 80) %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if @custom_characters.any? %>
        <% @custom_characters.each do |character| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-lift character-card border-2"
                 data-selection-target="card"
                 data-id="<%= character.id %>"
                 data-action="click->selection#select"
                 style="border-color: #FF6B6B; cursor: pointer;">
              <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                <span class="badge" style="background-color: #FF6B6B;">
                  <i class="bi bi-star-fill"></i> Custom
                </span>
              </div>
              <% if character.image_url.present? %>
                <%= image_tag character.image_url, class: "card-img-top", alt: character.name, style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                  <i class="bi bi-person-circle" style="font-size: 4rem; color: #FF6B6B;"></i>
                </div>
              <% end %>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= character.name %></h5>
                <% if character.description.present? %>
                  <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(character.description, length: 80) %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to new_character_path, class: "text-decoration-none" do %>
          <div class="card h-100 shadow-sm hover-lift border-2 border-dashed" style="border-color: #FF6B6B;">
            <div class="card-body d-flex flex-column align-items-center justify-content-center text-center py-5">
              <i class="bi bi-plus-circle mb-3" style="font-size: 3rem; color: #FF6B6B;"></i>
              <h5 class="card-title mb-3" style="color: #FF6B6B;">Create your own</h5>
              <p class="card-text text-muted small mb-4">Bring a unique hero to life with your imagination</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= link_to "Back", dashboard_path, class: "btn btn-danger mt-4" %>

    <div class="continue-button-wrapper">
      <%= f.submit "Continue", class: "btn btn-sunset btn-lg", disabled: true, data: { selection_target: "submitButton" } %>
    </div>
  <% end %>
</div>

<style>
  .hover-lift {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(255, 107, 107, 0.25) !important;
  }

  .border-dashed {
    border-style: dashed !important;
  }

  .btn-sunset {
    background-color: #FF6B6B;
    border-color: #FF6B6B;
    color: white;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-sunset:hover:not(:disabled) {
    background-color: #FF5252;
    border-color: #FF5252;
    color: white;
    transform: scale(1.02);
  }

  .btn-sunset:disabled {
    background-color: #cccccc;
    border-color: #cccccc;
    color: #666666;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .btn-outline-sunset {
    border: 2px solid #FF6B6B;
    color: #FF6B6B;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-outline-sunset:hover {
    background-color: #FF6B6B;
    border-color: #FF6B6B;
    color: white;
    transform: scale(1.02);
  }

  .card {
    background-color: #ffffff;
  }

  body {
    background-color: #F7F7F7;
  }

  .character-card.selected {
    border: 4px solid #FF6B6B !important;
    transform: scale(1.05);
    box-shadow: 0 1rem 2rem rgba(255, 107, 107, 0.4) !important;
  }

  .continue-button-wrapper {
    position: fixed;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
  }

  .continue-button-wrapper .btn {
    min-width: 200px;
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.3);
  }
</style>

