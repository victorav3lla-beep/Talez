<aside class="sidebar">
  <!-- Logo -->
  <div class="sidebar-logo" data-controller="logo-switcher">
    <%= link_to dashboard_path, class: 'logo-link', title: 'TALEZ Dashboard' do %>
      <%= image_tag 'logo_talez_1.png', alt: 'TALEZ', class: 'logo-image', data: { logo_switcher_target: 'logo1' } %>
      <%= image_tag 'logo_talez_2.png', alt: 'TALEZ', class: 'logo-image', style: 'display: none;', data: { logo_switcher_target: 'logo2' } %>
    <% end %>
  </div>

  <!-- Navigation Menu -->
  <nav class="sidebar-nav">
    <%= link_to dashboard_path, class: "nav-item #{active == 'dashboard' ? 'active' : ''}" do %>
      <i class="fas fa-home nav-icon"></i>
      <span class="nav-label">Dashboard</span>
    <% end %>

    <%= link_to characters_path, class: "nav-item #{active == 'create' ? 'active' : ''}" do %>
      <i class="fas fa-plus-circle nav-icon"></i>
      <span class="nav-label">Create Story</span>
    <% end %>

    <%= link_to stories_path, class: "nav-item #{active == 'stories' ? 'active' : ''}" do %>
      <i class="fas fa-book nav-icon"></i>
      <span class="nav-label">Library</span>
    <% end %>

    <%= link_to '#', class: "nav-item #{active == 'bookmarks' ? 'active' : ''}" do %>
      <i class="fas fa-bookmark nav-icon"></i>
      <span class="nav-label">Bookmarks</span>
    <% end %>

    <% if current_profile %>
      <%= link_to edit_profile_path(current_profile), class: "nav-item #{active == 'settings' ? 'active' : ''}" do %>
        <i class="fas fa-cog nav-icon"></i>
        <span class="nav-label">Settings</span>
      <% end %>
    <% end %>
  </nav>

  <!-- Footer -->
  <div class="sidebar-footer">
    <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" }, class: "nav-item logout-item" do %>
      <i class="fas fa-sign-out-alt nav-icon"></i>
      <span class="nav-label">Log out</span>
    <% end %>

    <%= link_to profiles_path, class: "btn-back-profiles" do %>
      <i class="fas fa-users"></i>
      Back to Profiles
    <% end %>
  </div>
</aside>
