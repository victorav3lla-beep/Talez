<div id="loadingOverlay"
     data-controller="loading"
     data-loading-target="container"
     style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:#000; z-index:10000; overflow:hidden;">
  <style>
    .stars-container { position:absolute; width:100%; height:100%; top:0; left:0; z-index:1; }
    .bg-star { position:absolute; width:3px; height:3px; background:#fff; border-radius:50%; box-shadow:0 0 4px #fff; animation: starTwinkle 3s ease-in-out infinite; }
    @keyframes starTwinkle { 0%,100%{opacity:.3} 50%{opacity:1; transform:scale(1.4)} }
    .game-container { position:relative; width:100%; height:100%; z-index:10; }
    .score { position:absolute; top:20px; left:20px; color:white; font-size:20px; z-index:100; }
    .loading-text { text-align:center; margin-top:50px; color:white; z-index:100; width:100%; }
    .rocket { position:absolute; top:150px; left:50%; transform:translateX(-50%); font-size:48px; z-index:50; transition:transform .2s; }
    .rocket.bobbing { animation: rocketBob 2s ease-in-out infinite; }
    @keyframes rocketBob { 0%,100%{transform:translateX(-50%) translateY(0) rotate(-2deg)} 50%{transform:translateX(-50%) translateY(-12px) rotate(2deg)} }
    .falling-star { position:absolute; font-size:36px; cursor:pointer; animation-timing-function: linear; z-index:20; filter: drop-shadow(0 0 8px #FFE66D); }
    @keyframes fall { 0%{ top:-60px } 100%{ top:100% } }
    .book-catcher { position:absolute; bottom:40px; left:50%; transform:translateX(-50%); font-size:60px; cursor:grab; z-index:30; user-select:none; touch-action:none; }
    .book-catcher:active { cursor:grabbing; }
  </style>

  <div class="stars-container" data-loading-target="starsContainer"></div>

  <div class="game-container">
    <div class="score">Stars: <span id="scoreValue" data-loading-target="scoreValue">0</span></div>

    <div class="loading-text">
      <h2 style="color:#fff;margin-bottom:6px">Creating your story...</h2>
      <p style="color:#ddd">Catch the falling stars in the meantime!</p>
    </div>

