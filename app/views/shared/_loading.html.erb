<div id="loadingOverlay"
     data-controller="loading"
     style="position:fixed; top:0; left:0; width:100%; height:100%; z-index:10000; overflow:hidden; display:none; background:rgba(0, 0, 0, 0.7); pointer-events:auto;">
  <style>
    #loadingOverlay { pointer-events:auto !important; }
    #loadingOverlay * { pointer-events:none; }
    #loadingOverlay .stars-container { pointer-events:none !important; }
    #loadingOverlay .bg-star { position:absolute; width:3px; height:3px; background:#fff; border-radius:50%; box-shadow:0 0 4px #fff; animation: starTwinkle 3s ease-in-out infinite; pointer-events:none !important; }
    @keyframes starTwinkle { 0%,100%{opacity:.3} 50%{opacity:1; transform:scale(1.4)} }
    #loadingOverlay .game-container { position:relative; width:100%; height:100%; z-index:10; pointer-events:none; }
    #loadingOverlay .score { position:absolute; top:20px; left:100px; color:white; font-size:20px; font-weight: bold; z-index:100; pointer-events:none !important; }
    #loadingOverlay .loading-text { text-align:center; margin-top:50px; color:white; z-index:100; width:100%; pointer-events:none !important; }
    #loadingOverlay .rocket { position:absolute; top:150px; left:50%; transform:translateX(-50%); font-size:48px; z-index:50; transition:transform .2s; animation: rocketBob 2s ease-in-out infinite; pointer-events:none !important; }
    @keyframes rocketBob { 0%,100%{transform:translateX(-50%) translateY(0) rotate(-2deg)} 50%{transform:translateX(-50%) translateY(-12px) rotate(2deg)} }
    #loadingOverlay .falling-star { position:absolute; font-size:36px; cursor:pointer; z-index:20; filter: drop-shadow(0 0 8px #FFE66D); animation: fall linear forwards; pointer-events:none !important; }
    @keyframes fall { 0%{ top:-60px; opacity:1 } 100%{ top:100%; opacity:1 } }
    #loadingOverlay .book-catcher { position:absolute; bottom:40px; left:50%; font-size:70px; cursor:grab; z-index:30; user-select:none; touch-action:none; padding:10px; border-radius:10px; transition:transform 0.1s; pointer-events:auto !important; }
    #loadingOverlay .book-catcher:hover { transform:scale(1.1); }
    #loadingOverlay .book-catcher:active { cursor:grabbing; }
  </style>

  <div class="stars-container" data-loading-target="starsContainer"></div>

  <div class="game-container">
    <div class="score">Stars: <span data-loading-target="score">0</span></div>

    <div class="loading-text">
      <h2 style="color:#fff;margin-bottom:6px">Creating your story...</h2>
      <p style="color:#ddd">Catch the falling stars in the meantime!</p>
    </div>

    <div id="rocket" class="rocket">ðŸš€</div>
    <div id="bookCatcher" class="book-catcher" data-loading-target="bookCatcher" aria-label="book catcher">ðŸ“–</div>
  </div>
</div>
