<div class="prompt-container min-vh-100 d-flex align-items-center justify-content-center">
  <!-- Back Button -->
  <div class="prompt-back-button">
    <%= link_to universes_path, class: "btn-back" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="prompt-card">
    <div class="text-center mb-4">
      <h1 class="prompt-title mb-2">Create your own story</h1>
      <p class="prompt-subtitle">Tell me how your story begins...</p>
    </div>

    <%= simple_form_for @story, error_notification: false do |f| %>
      <div class="form-inputs">
        <%= f.input :content,
                    label: false,
                    required: true,
                    as: :text,
                    input_html: {
                      rows: 4,
                      class: 'prompt-input',
                      placeholder: 'Write your story prompt here...'
                    } %>
        <% if flash[:alert] %>
          <span class="error-message text-danger"><%= flash[:alert] %></span>
        <% end %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit,
                    "Begin my story",
                    class: "btn btn-sunset btn-lg w-100" %>
      </div>
    <% end %>
  </div>
</div>
