<div class="container story-show m-5-auto p-4 bg-light rounded">
  <hr>
  <h3><%= @story.title %></h3>
  <hr>
  <div class="container">
    <%= @story.content %>
  </div>
  <hr>
  <div class="story-images-container">
    <% @story.images.each do |image| %>
      <%= image_tag image, alt: @story.title, class: "story-image", loading: "lazy" %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center gap-3">
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-warning btn-lg" %>
    <%= link_to "Continue", new_story_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
