<div class="auth-page">
  <!-- Stars background container -->
  <div class="auth-stars"></div>

  <!-- Floating decorations -->
  <div class="auth-decoration deco-1">âœ¨</div>
  <div class="auth-decoration deco-2">ğŸŒŸ</div>
  <div class="auth-decoration deco-3">ğŸ“</div>
  <div class="auth-decoration deco-4">ğŸ­</div>

  <!-- Back to home -->
  <%= link_to root_path, class: "auth-home-link" do %>
    <i class="fas fa-arrow-left"></i>
    <span>Back to Home</span>
  <% end %>

  <!-- Main auth card -->
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">ğŸ“–</div>
      <h1 class="auth-title">Begin Your Journey</h1>
      <p class="auth-subtitle">Create an account to start telling magical stories</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification message: "Please fix the errors below to continue" %>

      <div class="form-inputs">
        <div class="mb-3">
          <%= f.label :email %>
          <div class="auth-input-wrapper">
            <%= f.email_field :email,
                              required: true,
                              autofocus: true,
                              autocomplete: "email",
                              placeholder: "Enter your email",
                              class: "form-control" %>
            <i class="fas fa-envelope auth-input-icon"></i>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password %>
          <div class="auth-input-wrapper">
            <%= f.password_field :password,
                                 required: true,
                                 autocomplete: "new-password",
                                 placeholder: "Create a password",
                                 class: "form-control" %>
            <i class="fas fa-lock auth-input-icon"></i>
          </div>
          <% if @minimum_password_length %>
            <p class="form-text">
              <i class="fas fa-info-circle"></i>
              Minimum <%= @minimum_password_length %> characters
            </p>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation %>
          <div class="auth-input-wrapper">
            <%= f.password_field :password_confirmation,
                                 required: true,
                                 autocomplete: "new-password",
                                 placeholder: "Confirm your password",
                                 class: "form-control" %>
            <i class="fas fa-shield-alt auth-input-icon"></i>
          </div>
        </div>
      </div>

      <button type="submit" class="auth-submit auth-submit-secondary">
        Create Account âœ¨
      </button>
    <% end %>

    <div class="auth-links">
      <p>By signing up, you agree to create magical stories!</p>
    </div>
  </div>

  <!-- Switch to sign in -->
  <p class="auth-switch">
    Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %>
  </p>
</div>
