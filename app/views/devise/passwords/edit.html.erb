<div class="auth-page">
  <!-- Stars background container -->
  <div class="auth-stars"></div>

  <!-- Floating decorations -->
  <div class="auth-decoration deco-1">ğŸ”</div>
  <div class="auth-decoration deco-2">âœ¨</div>
  <div class="auth-decoration deco-3">ğŸŒŸ</div>
  <div class="auth-decoration deco-4">ğŸ”‘</div>

  <!-- Main auth card -->
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">ğŸ›¡ï¸</div>
      <h1 class="auth-title">Create New Password</h1>
      <p class="auth-subtitle">Choose a strong password for your magical adventures</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= f.error_notification message: "Please fix the errors below" %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <div class="mb-3">
          <%= f.label :password, "New Password" %>
          <div class="auth-input-wrapper">
            <%= f.password_field :password,
                                 required: true,
                                 autofocus: true,
                                 autocomplete: "new-password",
                                 placeholder: "Enter new password",
                                 class: "form-control" %>
            <i class="fas fa-lock auth-input-icon"></i>
          </div>
          <% if @minimum_password_length %>
            <p class="form-text">
              <i class="fas fa-info-circle"></i>
              Minimum <%= @minimum_password_length %> characters
            </p>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm New Password" %>
          <div class="auth-input-wrapper">
            <%= f.password_field :password_confirmation,
                                 required: true,
                                 autocomplete: "new-password",
                                 placeholder: "Confirm new password",
                                 class: "form-control" %>
            <i class="fas fa-shield-alt auth-input-icon"></i>
          </div>
        </div>
      </div>

      <button type="submit" class="auth-submit auth-submit-secondary">
        Update Password âœ¨
      </button>
    <% end %>

    <div class="auth-links">
      <p>Remember your password? <%= link_to "Sign in", new_session_path(resource_name) %></p>
    </div>
  </div>
</div>
