<div class="auth-page">
  <!-- Stars background container -->
  <div class="auth-stars"></div>

  <!-- Floating decorations -->
  <div class="auth-decoration deco-1">âœ¨</div>
  <div class="auth-decoration deco-2">ğŸ“–</div>
  <div class="auth-decoration deco-3">ğŸŒ™</div>
  <div class="auth-decoration deco-4">â­</div>

  <!-- Back to home -->
  <%= link_to root_path, class: "auth-home-link" do %>
    <i class="fas fa-arrow-left"></i>
    <span>Back to Home</span>
  <% end %>

  <!-- Main auth card -->
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">ğŸ“š</div>
      <h1 class="auth-title">Welcome Back!</h1>
      <p class="auth-subtitle">Sign in to continue your magical adventures</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-inputs">
        <div class="mb-3">
          <%= f.label :email %>
          <div class="auth-input-wrapper">
            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              placeholder: "Enter your email",
                              class: "form-control" %>
            <i class="fas fa-envelope auth-input-icon"></i>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password %>
          <div class="auth-input-wrapper">
            <%= f.password_field :password,
                                 autocomplete: "current-password",
                                 placeholder: "Enter your password",
                                 class: "form-control" %>
            <i class="fas fa-lock auth-input-icon"></i>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Remember me" %>
          </div>
        <% end %>
      </div>

      <button type="submit" class="auth-submit">
        Sign In âœ¨
      </button>
    <% end %>

    <div class="auth-links">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <p>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </p>
      <% end %>
    </div>
  </div>

  <!-- Switch to sign up -->
  <p class="auth-switch">
    Don't have an account? <%= link_to "Create one", new_registration_path(resource_name) %>
  </p>
</div>
