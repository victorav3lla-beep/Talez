<div class="auth-page">
  <!-- Stars background container -->
  <div class="auth-stars"></div>

  <!-- Floating decorations -->
  <div class="auth-decoration deco-1">ğŸ”“</div>
  <div class="auth-decoration deco-2">âœ¨</div>
  <div class="auth-decoration deco-3">ğŸ”‘</div>
  <div class="auth-decoration deco-4">ğŸŒŸ</div>

  <!-- Back to login -->
  <%= link_to new_user_session_path, class: "auth-home-link" do %>
    <i class="fas fa-arrow-left"></i>
    <span>Back to Sign In</span>
  <% end %>

  <!-- Main auth card -->
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">ğŸ”</div>
      <h1 class="auth-title">Unlock Your Account</h1>
      <p class="auth-subtitle">We'll send you unlock instructions</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "auth-form" }) do |f| %>
      <%= f.error_notification message: "Please fix the errors below" %>
      <%= f.full_error :unlock_token %>

      <div class="form-inputs">
        <div class="mb-3">
          <%= f.label :email %>
          <div class="auth-input-wrapper">
            <%= f.email_field :email,
                              required: true,
                              autofocus: true,
                              autocomplete: "email",
                              placeholder: "Enter your email",
                              class: "form-control" %>
            <i class="fas fa-envelope auth-input-icon"></i>
          </div>
        </div>
      </div>

      <button type="submit" class="auth-submit">
        Send Unlock Link âœ¨
      </button>
    <% end %>

    <div class="auth-links">
      <p>Remember your password? <%= link_to "Sign in", new_session_path(resource_name) %></p>
    </div>
  </div>
</div>
