<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <i class="bi bi-globe-americas mb-3" style="font-size: 3rem; color: #FF6B6B;"></i>
            <h1 class="h2 fw-bold mb-3" style="color: #FF6B6B;">Create your own universe</h1>
            <p class="text-muted">Design a unique world for your story</p>
          </div>

          <%= simple_form_for @universe do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.input :name,
                          label: "Universe Name",
                          required: true,
                          input_html: { class: 'form-control-lg' },
                          placeholder: "e.g., Enchanted Forest Kingdom" %>

              <%= f.input :description,
                          label: "What is this universe like?",
                          required: true,
                          as: :text,
                          input_html: { rows: 4, class: 'form-control-lg' },
                          hint: "Example: A magical forest where trees glow at night and animals can talk",
                          placeholder: "Describe your universe..." %>
            </div>

            <div class="form-actions mt-4 d-grid gap-2">
              <%= f.button :submit,
                          "Create Universe",
                          class: "btn btn-sunset btn-lg" %>
              <%= link_to "Cancel",
                          universes_path,
                          class: "btn btn-outline-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .btn-sunset {
    background-color: #FF6B6B;
    border-color: #FF6B6B;
    color: white;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-sunset:hover {
    background-color: #FF5252;
    border-color: #FF5252;
    color: white;
    transform: scale(1.02);
  }

  .card {
    background-color: #ffffff;
  }

  body {
    background-color: #F7F7F7;
  }

  .form-control:focus,
  .form-control-lg:focus {
    border-color: #FF6B6B;
    box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
  }
</style>
