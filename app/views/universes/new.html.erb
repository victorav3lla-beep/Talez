<% content_for :night_sky, true %>
<div class="prompt-container min-vh-100 d-flex align-items-center justify-content-center">
  <!-- Back Button -->
  <div class="prompt-back-button">
    <%= link_to universes_path, class: "btn-back" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="prompt-card">
    <div class="text-center mb-4">
      <h1 class="prompt-title mb-2">Create your own universe</h1>
      <p class="prompt-subtitle">Describe the world where the story happens</p>
    </div>

    <%= simple_form_for @universe do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :description,
                    label: false,
                    required: true,
                    as: :text,
                    input_html: {
                      rows: 4,
                      class: 'prompt-input',
                      placeholder: 'Write your universe prompt here...'
                    } %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit,
                    "Generate universe",
                    class: "btn btn-sunset btn-lg w-100" %>
      </div>
    <% end %>
  </div>
</div>
