<!-- TALEZ Logo - Top Left -->
<div class="page-logo">
  <%= link_to dashboard_path, class: "logo-link" do %>
    <h1 class="logo-text">TALEZ</h1>
  <% end %>
</div>

<!-- Theme Toggle - Top Right -->
<%= render 'shared/theme_toggle' %>

<div class="page-wrapper">
<div class="container py-5" data-controller="selection">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold" style="color: #FF6B6B;">Choose your universe</h1>
    <p class="lead text-muted">Select the setting for your story</p>
    <button class="btn btn-outline-secondary mt-3" id="randomize-btn" type="button">
      <i class="bi bi-shuffle me-2"></i>Randomize
    </button>
  </div>

  <%= form_with url: select_universes_path, method: :post, data: { turbo: false } do |f| %>
    <%= f.hidden_field :id, value: "", data: { selection_target: "input" } %>

    <div class="row g-4">
      <% if @default_universes.any? %>
        <% @default_universes.each do |universe| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-lift universe-card"
                 data-selection-target="card"
                 data-id="<%= universe.id %>"
                 data-action="click->selection#select"
                 style="cursor: pointer;">
              <% if universe.image.attached? %>
                <%= image_tag url_for(universe.image), class: "card-img-top", alt: universe.name, style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                  <i class="bi bi-globe-americas text-white" style="font-size: 4rem;"></i>
                </div>
              <% end %>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= universe.name %></h5>
                <% if universe.description.present? %>
                  <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(universe.description, length: 80) %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if @custom_universes.any? %>
        <% @custom_universes.each do |universe| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-lift universe-card border-2"
                 data-selection-target="card"
                 data-id="<%= universe.id %>"
                 data-action="click->selection#select"
                 style="border-color: #FF6B6B; cursor: pointer;">
              <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                <span class="badge" style="background-color: #FF6B6B;">
                  <i class="bi bi-star-fill"></i> Custom
                </span>
              </div>
              <% if universe.image.attached? %>
                <%= image_tag url_for(universe.image), class: "card-img-top", alt: universe.name, style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                  <i class="bi bi-globe-americas" style="font-size: 4rem; color: #FF6B6B;"></i>
                </div>
              <% end %>
              <div class="card-body d-flex flex-column text-center">
                <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= universe.name %></h5>
                <% if universe.description.present? %>
                  <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(universe.description, length: 80) %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to new_universe_path, class: "text-decoration-none" do %>
          <div class="card h-100 shadow-sm hover-lift border-2 border-dashed" style="border-color: #FF6B6B;">
            <div class="card-body d-flex flex-column align-items-center justify-content-center text-center py-5">
              <i class="bi bi-plus-circle mb-3" style="font-size: 3rem; color: #FF6B6B;"></i>
              <h5 class="card-title mb-3" style="color: #FF6B6B;">Create your own</h5>
              <p class="card-text text-muted small mb-4">Design a unique world for your story</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= link_to "Back", characters_path, class: "btn btn-danger mt-4" %>

    <div class="continue-button-wrapper">
      <%= f.submit "Continue", class: "btn btn-sunset btn-lg", disabled: true, data: { selection_target: "submitButton" } %>
    </div>
  <% end %>
</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const randomizeBtn = document.getElementById('randomize-btn');

    randomizeBtn.addEventListener('click', function() {
      console.log('Randomize button clicked - functionality to be implemented');
      alert('Randomize feature coming soon!');
    });
  });
</script>
