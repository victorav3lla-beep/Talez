<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold" style="color: #FF6B6B;">Choose your universe</h1>
    <p class="lead text-muted">Select the setting for your story</p>
    <button class="btn btn-outline-secondary mt-3" id="randomize-btn">
      <i class="bi bi-shuffle me-2"></i>Randomize
    </button>
  </div>

  <div class="row g-4">
    <% if @default_universes.any? %>
      <% @default_universes.each do |universe| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 universe-card" data-character-id="<%= universe.id %>">
          <div class="card h-100 shadow-sm hover-lift">
            <% if universe.image_url.present? %>
              <%= image_tag universe.image_url, class: "card-img-top", alt: universe.name, style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
              </div>
            <% end %>
            <div class="card-body d-flex flex-column text-center">
              <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= universe.name %></h5>
              <% if universe.description.present? %>universe
                <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(universe.description, length: 80) %></p>
              <% end %>
              <div class="mt-auto">
                <%= link_to "#", class: "btn btn-sunset w-100" do %>
                  <i class="bi bi-check-circle me-1"></i>Select
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if @custom_universes.any? %>
      <% @custom_universes.each do |universe| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 universe-card" data-universe-id="<%= universe.id %>">
          <div class="card h-100 shadow-sm hover-lift border-2" style="border-color: #FF6B6B;">
            <div class="position-absolute top-0 end-0 m-2">
              <span class="badge" style="background-color: #FF6B6B;">
                <i class="bi bi-star-fill"></i> Custom
              </span>
            </div>
            <% if universe.image_url.present? %>
              <%= image_tag universe.image_url, class: "card-img-top", alt: universe.name, style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #FFD3B6 0%, #FFAAA5 100%);">
                <i class="bi bi-person-circle" style="font-size: 4rem; color: #FF6B6B;"></i>
              </div>
            <% end %>
            <div class="card-body d-flex flex-column text-center">
              <h5 class="card-title mb-3" style="color: #FF6B6B;"><%= universe.name %></h5>
              <% if universe.description.present? %>
                <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(universe.description, length: 80) %></p>
              <% end %>
              <div class="mt-auto">
                <%= link_to "#", class: "btn btn-sunset w-100" do %>
                  <i class="bi bi-check-circle me-1"></i>Select
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100 shadow-sm hover-lift border-2 border-dashed" style="border-color: #FF6B6B;">
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center py-5">
          <i class="bi bi-plus-circle mb-3" style="font-size: 3rem; color: #FF6B6B;"></i>
          <h5 class="card-title mb-3" style="color: #FF6B6B;">Create your own</h5>
          <p class="card-text text-muted small mb-4">Bring a unique hero to life with your imagination</p>
          <%= link_to new_universe_path, class: "btn btn-outline-sunset" do %>
            <i class="bi bi-magic me-2"></i>Create universe
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hover-lift {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(255, 107, 107, 0.25) !important;
  }

  .border-dashed {
    border-style: dashed !important;
  }

  .btn-sunset {
    background-color: #FF6B6B;
    border-color: #FF6B6B;
    color: white;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-sunset:hover {
    background-color: #FF5252;
    border-color: #FF5252;
    color: white;
    transform: scale(1.02);
  }

  .btn-outline-sunset {
    border: 2px solid #FF6B6B;
    color: #FF6B6B;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
  }

  .btn-outline-sunset:hover {
    background-color: #FF6B6B;
    border-color: #FF6B6B;
    color: white;
    transform: scale(1.02);
  }

  .card {
    background-color: #ffffff;
  }

  body {
    background-color: #F7F7F7;
  }
</style>

