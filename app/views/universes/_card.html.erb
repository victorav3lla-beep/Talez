<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card h-100 shadow-sm hover-lift character-card universe-card position-relative"
       data-selection-target="card"
       data-id="<%= universe.id %>"
       data-action="click->selection#select"
       style="cursor: pointer;">
    <% if universe.is_custom %>
      <%= form_with url: universe_path(universe), method: :delete,
          local: true,
          style: "display: inline; position: absolute; top: 10px; right: 10px; z-index: 10;",
          data: { turbo: false },
          onsubmit: "event.stopPropagation(); return confirm('Are you sure you want to delete #{universe.name}?');" do |f| %>
        <%= f.button type: :submit, class: "btn btn-sm btn-danger", style: "opacity: 0.9;", onclick: "event.stopPropagation();" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      <% end %>
    <% end %>
    <% if universe.image_url.present? %>
      <%= image_tag universe.image_url, class: "card-img-top", alt: universe.name, style: "height: 200px; object-fit: cover;" %>
    <% else %>
      <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #A8E6CF 0%, #56CCF2 100%);">
        <i class="bi bi-globe-americas text-white" style="font-size: 4rem;"></i>
      </div>
    <% end %>
    <div class="card-body d-flex flex-column text-center">
      <h5 class="card-title mb-3" style="color: #56CCF2;"><%= universe.name %></h5>
      <% if universe.description.present? %>
        <p class="card-text text-muted small mb-3 flex-grow-1"><%= truncate(universe.description, length: 80) %></p>
      <% end %>
    </div>
  </div>
</div>
